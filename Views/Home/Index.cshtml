@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Leave Application Form</h1>
        <p class="lead">For employees to fill to apply any type of leaves available provided by the company</p>
    </section>

    <div class="row">
        <section class="h-100 h-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-8 col-xl-6">
                        <div class="card rounded-3">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                                 class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                                 alt="Sample photo">
                            <div class="card-body p-4 p-md-5">
                                <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Leave Details</h3>
                                @using (Html.BeginForm("Create", "Home"))
                                {
                                    <form asp-action="Create" class="px-ml-2">
                                        <div class="form-group m-4">
                                            <label asp-for="Email">Email address</label>
                                            @Html.AntiForgeryToken()
                                            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="fullName">Full Name</label>
                                            <input type="text" class="form-control" placeholder="Your full name">
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="startDate">Start Date</label>
                                            <input id="startDate" class="form-control" type="datetime-local" />
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="endDate">End Date</label>
                                            <input id="endDate" class="form-control" type="datetime-local" />
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="exampleFormControlTextarea1">Justification</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        </div>
                                        <div class="form-group m-4">
                                            <label for="fullName">Manager Name</label>
                                            <input type="text" class="form-control" placeholder="Manager Name">
                                        </div>
                                        <button type="submit" class="btn btn-success btn-lg m-4">Submit</button>

                                    </form>
                                }


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>